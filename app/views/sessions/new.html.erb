<div class="w-full lg:w-1/3 md:w-1/2 sm:w-3/4  mx-auto py-2">
  <%= form_for Session.new, html: { class: "bg-white border shadow-md rounded px-8 pt-6 pb-8 mb-4" } do |f| %>
    <div class="mb-4 flex flex-col">
      <h1 class="text-3xl text-gray-700 mb-6">Log In</h1>
      <%= f.label :email, "Your email address", class: "text-gray-700 text-lg font-bold mb-2" %>
      <%= f.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <p class="text-s text-gray-600 mb-8 italic">
    We'll send you an email with a magic link that will log you in. No need for a password.
    <p>
    <div class="flex flex-row justify-between items-center">
      <%= f.button "Email Link", class: "cursor-pointer text-lg bg-blue-700 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <a href="text-sm italic">Not a member? Sign up!</a>
    </div>
  <% end %>
</div>
